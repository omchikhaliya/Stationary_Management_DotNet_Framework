@model IEnumerable<GroceryManagment.Models.product>

@{
    ViewBag.Title = "Display Products";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        body {
            background-color: lightcyan;
            font-family: Arial, Helvetica, sans-serif;
        }
 

        .container {
        }

        h2 {
            color: #333;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0052cc;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        /* Table Styling */
        .table {
            background-color: #fff;
            border: 1px solid #dee2e6;
        }

            .table th {
                background-color: #343a40;
                color: #fff;
            }

            .table tbody tr {
                transition: background-color 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #e9ecef;
                }

        /* Button Group Styling */
        .btn-group {
            display: flex;
            justify-content: center;
        }

        /* Add some spacing between rows */
        .mb-4 {
            margin-bottom: 1rem;
        }

        /* Add some margin to buttons */
        .btn {
            margin-right: 5px;
        }

        /* Center-align the "Create New" button */
        .text-right {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Available Items</h2>


        <div class="row">
            <div class="col">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Item Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.product_name)</td>
                                <td>@Html.DisplayFor(modelItem => item.product_quantity)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("ProductDetail", "product", new { id = item.id })" class="btn btn-outline-success">Details</a>
                                        <a href="@Url.Action("UpdateProduct", "product", new { id = item.id })" class="btn btn-outline-primary">Edit</a>
                                        <a href="@Url.Action("DeleteProduct", "product", new { id = item.id })" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-right mb-4">
            <a href="@Url.Action("CreateProduct", "product")" class="btn btn-success px-2 py-2 mt-5">Create New</a>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
