@model GroceryManagment.Models.product

@{
    ViewBag.Title = "DeleteProduct";
}

<style>
    body {
        background-color: lightcyan;
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #333;
        text-align: center;
        padding: 20px 0;
    }

    h3 {
        color: #333;
    }

    .container {
        margin: 20px auto;
        max-width: 400px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .dl-horizontal {
        margin-top: 20px;
    }

    dt {
        font-weight: bold;
    }

    .form-actions {
        margin-top: 20px;
        text-align: center;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-primary {
        background-color: #337ab7;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #286090;
        }
</style>

<h2>Delete Product</h2>

<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Product Name")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.product_name)
            </dd>
            <dt>
                @Html.DisplayName("Product Quantity")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.product_quantity)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                |
                @Html.ActionLink("Cancel", "DisplayProduct", "product", new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
